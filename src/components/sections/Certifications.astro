---
import Section from "../Section.astro";
import { certificates } from "@cv";
---

<Section title="Certificados">
  <ul>
    {
      certificates.map(({ name, date, issuer, url }) => (
        <li>
          <article>
            <header>
              <h3>
                <a href={url} title={`Ver el certificado ${name}`} target="_blank">
                  {name}
                </a>
              </h3>
            </header>
            <footer>
              <span>{issuer}</span>
              <span>{date}</span>
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 10px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
    font-size: 1.2rem;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #333;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
